<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/blanco</item>
        <item name="colorPrimaryDark">@color/verdeFitt</item>
        <item name="colorAccent">@color/verdeBotones</item>
    </style>

    <style name="miBoton" parent="Widget.AppCompat.Button">
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="AppTheme.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="buttonStyle">@style/miBoton</item>
    </style>
    <style name="AppTheme.CustomThemePopUp">
        <item name = "android:windowIsTranslucent">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
        <item name="buttonStyle">@style/miBoton</item>
    </style>
</resources>
