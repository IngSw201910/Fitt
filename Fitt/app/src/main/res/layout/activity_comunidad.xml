<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Vista.Comunidad">

    <LinearLayout
        android:id="@+id/linearLayoutMenuTexto"
        android:layout_width="330dp"
        android:layout_height="25dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.561"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutMenu">

        <TextView
            android:id="@+id/textViewInicio"
            android:layout_width="21dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginRight="60dp"
            android:layout_weight="0.3"
            android:text="Inicio"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewComunidad"
            android:layout_width="21dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginRight="60dp"
            android:layout_weight="0.3"
            android:text="Comunidad"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewMiPerfil"
            android:layout_width="21dp"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.3"
            android:text="Mi perfil"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="12sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutMenu"
        android:layout_width="330dp"
        android:layout_height="45dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="16dp"
        android:clipToPadding="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageButton
            android:id="@+id/buttonInicio"
            android:layout_width="6dp"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:layout_weight="0.3"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/inicio" />

        <ImageButton
            android:id="@+id/buttonComunidad"
            android:layout_width="6dp"
            android:layout_height="40dp"
            android:layout_marginRight="60dp"
            android:layout_weight="0.3"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/comunidad" />

        <ImageButton
            android:id="@+id/buttonMiPerfil"
            android:layout_width="6dp"
            android:layout_height="40dp"
            android:layout_weight="0.3"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mi_perfil" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <TextView
            android:id="@+id/textViewMapaUsuarios"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="0.3"
            android:text="Mapa usuarios"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textViewBuscarUsuario"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="0.3"
            android:text="Buscar usuario"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/textViewEjercicios"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.3"
            android:text="Ejercicios"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clipToPadding="true"
        android:orientation="horizontal"
        android:showDividers="middle|none"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tituloComunidad">

        <ImageButton
            android:id="@+id/buttonParques"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.3"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/parques" />

        <ImageButton
            android:id="@+id/buttonChats"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.3"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/chats" />

        <ImageButton
            android:id="@+id/buttonBuscarRutinas"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_weight="0.3"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/buscar_rutinas" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="wrap_content"
        android:layout_height="81dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:clipToPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.49"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

        <ImageButton
            android:id="@+id/buttonMapaUsuarios"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.3"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mapa_usuarios" />

        <ImageButton
            android:id="@+id/buttonBuscarUsuario"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_marginRight="15dp"
            android:layout_weight="0.3"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/buscar_usuarios" />

        <ImageButton
            android:id="@+id/buttonEjercicios"
            android:layout_width="74dp"
            android:layout_height="74dp"
            android:layout_weight="0.3"
            android:background="#00FFFFFF"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/ejercicios" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="263dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="8dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout1">

        <TextView
            android:id="@+id/textViewParques"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="0.3"
            android:text="Parques"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewChats"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_marginRight="15dp"
            android:layout_weight="0.3"
            android:text="Chats"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/textViewBuscarRutinas"
            android:layout_width="wrap_content"
            android:layout_height="26dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:layout_weight="0.3"
            android:text="Buscar rutinas"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="12sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/tituloComunidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="28dp"
        android:layout_marginEnd="8dp"
        android:fontFamily="sans-serif-medium"
        android:text="Comunidad"
        android:textColor="#4BC6AA"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ListView
        android:layout_width="378dp"
        android:layout_height="221dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4" />

</android.support.constraint.ConstraintLayout>