<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="1dp"
    tools:context=".Vista.EjercicioRepeticionesFragment">

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifEjercicio8"
        android:layout_width="171dp"
        android:layout_height="154dp"

        android:layout_marginStart="28dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:background="@color/verdeBotones"
        android:cropToPadding="true"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/gif_prueba"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/pbSeriesRepeticiones"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/descripcionEjercicioRepeticiones"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:inputType="textMultiLine"
        android:scrollbars="vertical"
        android:text="DescripciÃ³n: Coloque sus manos sobre el suelo y apoye los pies sobre una superficie elevada"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.466"
        app:layout_constraintStart_toEndOf="@+id/gifEjercicio8"
        app:layout_constraintTop_toBottomOf="@+id/pbSeriesRepeticiones"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tvRepeticiones"
        android:layout_width="73dp"
        android:layout_height="31dp"
        android:layout_marginTop="180dp"
        android:layout_marginEnd="88dp"
        android:gravity="center"
        android:text="999/999"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="999/999" />

    <ProgressBar
        android:id="@+id/pbRepeticiones"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="151dp"
        android:layout_height="127dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="48dp"
        android:max="100"
        android:padding="0dp"
        android:progress="100"
        android:progressDrawable="@drawable/progress_circle"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/pbSeriesRepeticiones"
        app:layout_constraintTop_toBottomOf="@+id/textView27" />

    <TextView
        android:id="@+id/tvSerieRepeticiones"
        android:layout_width="73dp"
        android:layout_height="31dp"
        android:layout_marginStart="75dp"
        android:layout_marginTop="45dp"
        android:gravity="center"
        android:text="999/999"
        android:textAlignment="center"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="48dp"
        android:text="Repeticiones"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/textView26"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

    <ProgressBar
        android:id="@+id/pbSerieRepeticiones"
        style="?android:attr/progressBarStyleHorizontal"
        android:progress="100"
        android:max="100"
        android:layout_width="151dp"
        android:layout_height="127dp"
        android:layout_marginStart="37dp"
        android:padding="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView26"
        android:progressDrawable="@drawable/progress_circle"/>

    <TextView
        android:id="@+id/textView25"
        android:layout_width="261dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:text="Flexiones de pecho"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="151dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:layout_marginTop="12dp"
        android:text="Serie"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView25" />

</android.support.constraint.ConstraintLayout>