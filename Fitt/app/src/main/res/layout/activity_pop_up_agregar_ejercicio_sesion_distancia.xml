<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border_pop_ups">


    <ImageButton
        android:id="@+id/imageButtonInformacion"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/informacion"
        app:layout_constraintStart_toEndOf="@+id/textDificultadEjercicio"
        app:layout_constraintTop_toBottomOf="@+id/textMusculosEjercicio" />

    <ImageButton
        android:id="@+id/imageButtonAceptar"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginEnd="52dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/aceptar"
        app:layout_constraintBottom_toTopOf="@+id/textViewAceptar2"
        app:layout_constraintEnd_toEndOf="parent" />

    <ImageButton
        android:id="@+id/imageButtonCancelar"
        android:layout_width="74dp"
        android:layout_height="74dp"
        android:layout_marginStart="52dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/cancelar"
        app:layout_constraintBottom_toTopOf="@+id/textViewCancelar2"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewCancelar2"
        android:layout_width="69dp"
        android:layout_height="22dp"
        android:layout_marginStart="56dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="Cancelar"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/barrier3"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textViewAceptar2"
        android:layout_width="69dp"
        android:layout_height="22dp"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="Aceptar"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="@id/barrier3"
        app:layout_constraintEnd_toEndOf="parent" />

    <pl.droidsonroids.gif.GifImageView
        android:id="@+id/gifEjercicio"
        android:layout_width="125dp"
        android:layout_height="108dp"

        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/gif_prueba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNombreEjercicio"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:text="NombreEjercicio"
        app:layout_constraintStart_toEndOf="@+id/gifEjercicio"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textMusculosEjercicio"
        android:layout_width="190dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:text="MÃºsculos"
        app:layout_constraintStart_toEndOf="@+id/gifEjercicio"
        app:layout_constraintTop_toBottomOf="@+id/textNombreEjercicio" />

    <TextView
        android:id="@+id/textTipoEjercicio"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:text="Tipo"
        app:layout_constraintStart_toEndOf="@+id/gifEjercicio"
        app:layout_constraintTop_toBottomOf="@+id/textMusculosEjercicio" />

    <TextView
        android:id="@+id/textDificultadEjercicio"
        android:layout_width="100dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:text="Dificultad"
        app:layout_constraintStart_toEndOf="@+id/gifEjercicio"
        app:layout_constraintTop_toBottomOf="@+id/textTipoEjercicio" />

    <EditText
        android:id="@+id/editText5Distanciasd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Distancia"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textDificultadEjercicio" />

    <android.support.constraint.Barrier
        android:id="@+id/barrier3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:barrierDirection="top" />

</android.support.constraint.ConstraintLayout>