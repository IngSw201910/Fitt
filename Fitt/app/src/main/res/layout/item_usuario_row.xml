<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textNombreBusqueda"
        android:layout_width="193dp"
        android:layout_height="37dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:focusable="false"
        android:text="Nombre"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageViewPerfilBusqueda"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageViewPerfilBusqueda"
        android:layout_width="98dp"
        android:layout_height="101dp"
        android:focusableInTouchMode="false"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/textSeguidoresBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="23dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Seguidores"
        android:focusable="false"
        app:layout_constraintEnd_toStartOf="@+id/buttonSeguirBusqueda"
        app:layout_constraintStart_toEndOf="@+id/imageViewPerfilBusqueda"
        app:layout_constraintTop_toBottomOf="@+id/textNombreBusqueda" />

    <TextView
        android:id="@+id/textViewSeguidosBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="8dp"
        android:text="Seguidos"
        android:focusable="false"
        app:layout_constraintEnd_toStartOf="@+id/buttonSeguirBusqueda"
        app:layout_constraintStart_toEndOf="@+id/imageViewPerfilBusqueda"
        app:layout_constraintTop_toBottomOf="@+id/textSeguidoresBusqueda" />

    <Button
        android:id="@+id/buttonSeguirBusqueda"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:text="Seguir"
        android:focusable="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNombreBusqueda" />
</android.support.constraint.ConstraintLayout>